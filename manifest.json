{
  "manifest_version": 2,
  "name": "Claude MCP Bridge",
  "version": "1.0.1",
  "description": "Claude MCP Bridge",
  
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },

  "content_scripts": [
    {
      "matches": ["*://claude.ai/*", "*://*.claude.ai/*"],
      "js": ["bridge.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://claude.ai/*", "*://*.claude.ai/*"],
      "js": ["page_script.js"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  "permissions": [
    "*://claude.ai/*",
    "webRequest",
    "webRequestBlocking",
    "storage"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "claude-mcp-bridge@example.com"
    }
  }
}