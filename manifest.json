{
  "manifest_version": 2,
  "name": "Claude MCP Bridge",
  "version": "1.0",
  "description": "Claude MCP Bridge",
  
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },

  "content_scripts": [
    {
      "matches": ["*://claude.ai/*", "*://*.claude.ai/*"],
      "js": ["content_bridge.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://claude.ai/*", "*://*.claude.ai/*"],
      "js": ["main_content.js"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  "permissions": [
    "*://claude.ai/*",
    "webRequest",
    "webRequestBlocking",
    "wss://127.0.0.1:5588/",
    "storage"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "claude-mcp-bridge@example.com"
    }
  }
}